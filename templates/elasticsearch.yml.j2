# ======================== Elasticsearch Configuration =========================
#
# NOTE: Elasticsearch comes with reasonable defaults for most settings.
#       Before you set out to tweak and tune the configuration, make sure you
#       understand what are you trying to accomplish and the consequences.
#
# The primary way of configuring a node is via this file. This template lists
# the most important settings you may want to configure for a production cluster.
#
# Please consult the documentation for further information on configuration options:
# https://www.elastic.co/guide/en/elasticsearch/reference/index.html
#
# ---------------------------------- Cluster -----------------------------------
#
# Use a descriptive name for your cluster:
#
# cluster.name: my-application
{% if elasticsearch_cluster_name is defined and elasticsearch_cluster_name %}
cluster.name: {{ elasticsearch_cluster_name }}
{% endif %}

# action.auto_create_index: false
{% if elasticsearch_action_auto_create_index | bool is not none %}
action.auto_create_index: {{ elasticsearch_action_auto_create_index | bool | lower }}
{% endif %}
#
# ------------------------------------ Node ------------------------------------
#
# Use a descriptive name for the node:
#
#node.name: node-1
{% if elasticsearch_node_name is defined and elasticsearch_node_name %}
node.name: {{ elasticsearch_node_name }}
{% endif %}
#
# Add custom attributes to the node:
#
#node.attr.rack: r1
{% if elasticsearch_node_attr_rack is defined and elasticsearch_node_attr_rack %}
node.attr.rack: {{ elasticsearch_node_attr_rack }}
{% endif %}
#
# ----------------------------------- Paths ------------------------------------
#
# Path to directory where to store the data (separate multiple locations by comma):
#
# path.data: /var/lib/elasticsearch
{% if elasticsearch_path_data is defined and elasticsearch_path_data %}
path.data: {{ elasticsearch_path_data }}
{% endif %}
#
# Path to log files:
#
# path.logs: /var/log/elasticsearch
{% if elasticsearch_path_logs is defined and elasticsearch_path_logs %}
path.logs: {{ elasticsearch_path_logs }}
{% endif %}
#
# ----------------------------------- Memory -----------------------------------
#
# Lock the memory on startup:
#
# bootstrap.memory_lock: true
{% if elasticsearch_bootstrap_memory_lock | bool is not none %}
bootstrap.memory_lock: {{ elasticsearch_bootstrap_memory_lock | bool | lower }}
{% endif %}
#
# Make sure that the heap size is set to about half the memory available
# on the system and that the owner of the process is allowed to use this
# limit.
#
# Elasticsearch performs poorly when the system is swapping the memory.
#
# ---------------------------------- Network -----------------------------------
#
# Set the bind address to a specific IP (IPv4 or IPv6):
#
# network.host: localhost
{% if elasticsearch_network_host is defined and elasticsearch_network_host %}
network.host: {{ elasticsearch_network_host }}
{% endif %}
#
# Set a custom port for HTTP:
#
# http.port: 9200
{% if elasticsearch_http_port is defined and elasticsearch_http_port %}
http.port: {{ elasticsearch_http_port }}
{% endif %}
#
# For more information, consult the network module documentation.
#
# --------------------------------- Discovery ----------------------------------
#
# Pass an initial list of hosts to perform discovery when new node is started:
# The default list of hosts is ["127.0.0.1", "[::1]"]
#
#discovery.zen.ping.unicast.hosts: ["host1", "host2"]
{% if elasticsearch_discovery_zen_ping_unicast_hosts is defined and elasticsearch_discovery_zen_ping_unicast_hosts %}
discovery.zen.ping.unicast.hosts: [{{ elasticsearch_discovery_zen_ping_unicast_hosts }}]
{% endif %}
#
# Prevent the "split brain" by configuring the majority of nodes (total number of master-eligible nodes / 2 + 1):
#
#discovery.zen.minimum_master_nodes: 
{% if elasticsearch_discovery_zen_minimum_master_nodes is defined and elasticsearch_discovery_zen_minimum_master_nodes %}
discovery.zen.minimum_master_nodes: {{ elasticsearch_discovery_zen_minimum_master_nodes }}
{% endif %}
#
# For more information, consult the zen discovery module documentation.
#
# ---------------------------------- Gateway -----------------------------------
#
# Block initial recovery after a full cluster restart until N nodes are started:
#
#gateway.recover_after_nodes: 3
{% if elasticsearch_gateway_recover_after_nodes is defined and elasticsearch_gateway_recover_after_nodes %}
gateway.recover_after_nodes: {{ elasticsearch_gateway_recover_after_nodes }}
{% endif %}
#
# For more information, consult the gateway module documentation.
#
# ---------------------------------- Various -----------------------------------
#
# Require explicit names when deleting indices:
#
#action.destructive_requires_name: true
{% if elasticsearch_action_destructive_requires_name | bool is not none %}
action.destructive_requires_name: {{ elasticsearch_action_destructive_requires_name | bool | lower }}
{% endif %}
